<%= mailbox_page_header(:user_select => true) %>

<div class='innercol'>
  <%= render :partial => 'filter' %>
  
  <% message_list(@message_recipients) do %>

    <% form_tag trash_url do  %>
      <table id="inbox_messages" class="message_rows">

        <tr class='message_header'>
          <td class="checkbox_toggle" align="left" colspan="5" style='width:100%;'>
            <% check_all_delete( :delete_label => "Effacer de votre boite", :confirm => false) do %>
              ou <%= submit_tag _("Archiver") %>
            <% end -%>
          </td>
        </tr> 

      <% for recipient in @message_recipients %>
        <tr <%= message_status(recipient)%>>
          <td class="checkbox_toggle">
            <%= check_box_tag "ids[#{recipient.id}]" %>
          </td>
          <td class='name'>
              <span class="<%= recipient.is_highlighted? ? "highlight" : ""%>"><%=h recipient.sender(:short) %></span>
          </td>
          <td class="subject">
            <%= subject_wrap recipient.message %>
          </td>
          <td>
            <%= message_icons recipient.message %>
          </td>
          <td class='date'>
            <%= shortest_date(recipient.message.created_at) %>
          </td>
        </tr>
      
      <% end %>
      
      </table>
    <% end %>
    
  <%end%>

</div>

<% content_for :sidebar do %>
  <div class='new'>
      <%= link_to _("Nouveau message"), new_message_url, :class => :new %>
  </div>
  
  <h1>Autres</h1>
  <ul>
    <li><%= link_to _("Gestion des listes d'envois"), mailing_lists_url %></li>
  </ul>
<% end %>