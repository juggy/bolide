<%

render_tabnav :invoice, :html => {:class => 'page_tabnav'} do 
  
  add_tab do |t|
    t.named _("A facturer")
    t.links_to hash_for_work_sheet_invoices_path(:work_sheet_id => @work_sheet.id)
    t.highlights_on lambda { !@invoice.nil? && @invoice.id.blank? }
  end
  
  @work_sheet.invoices.each do |inv|
    add_tab do |t|
      t.named "##{inv.invoice_no}"
      t.links_to hash_for_work_sheet_invoice_path(:work_sheet_id => inv.work_sheet.id, :id => inv.id)
      t.highlights_on lambda { @invoice.id.to_s == inv.id.to_s}
    end
  end
end

%>