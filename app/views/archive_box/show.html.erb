<%= mailbox_page_header(:user_select => true) %>

<div class='innercol'>
  
  <% message_list(@message_recipients) do %>

    <% form_tag archive_box_url, :method => :delete do  %>
      <table id="inbox_messages" class="message_rows">

        <tr class='message_header'>
          <td class="checkbox_toggle" align="left" colspan="5" style='width:100%;'>
            <% check_all_delete( :no_delete => true, :confirm => false) do %>
              <%= submit_tag _("RÃ©cupÃ©rer") %>
            <% end %>
          </td>
        </tr> 

      <% for recipient in @message_recipients %>
        <tr <%= message_status(recipient)%>>
          <td class="checkbox_toggle">
            <%= check_box_tag "ids[#{recipient.id}]" %>
          </td>
          <td class='name'>
              <%=h recipient.sender(:short) %>
          </td>
          <td class="subject">
            <%= subject_wrap recipient.message %>
          </td>
          <td>
            <%= message_icons recipient.message %>
          </td>
          <td class='date'>
            <%= shortest_date(recipient.message.created_at) %>
          </td>
        </tr>
      
      <% end %>
      
      </table>
    <% end %>
    
  <%end%>

</div>

<% content_for :sidebar do %>
  <h1>Filtres</h1>
  <div class='filter'>
    <% form_tag do %>
      <%= hidden_field_tag :_method, :get %>
      <table>
        <tr>
          <td>Date:</td>
          <td><%= calendar_field_tag "start_date", params[:start_date],
          { :class => 'calendar_class',
            :button_title => _("choisir une date")
          },
          { :firstDay => 0,
            :range => [2000, 2030],
            :step => 1,
            :ifFormat => '%Y-%m-%d'
          } %>
          </td>
        </tr>
        <tr>
          <td>au:</td>
          <td><%= calendar_field_tag "end_date", params[:end_date],
          { :class => 'calendar_class',
            :button_title => _("choisir une date")
          },
          { :firstDay => 0,
            :range => [2000, 2030],
            :step => 1,
            :ifFormat => '%Y-%m-%d'
          } %></td>
        </tr>
      
      </table>
  
      <br />
      <%= submit_tag _("Filtrer") %>
    <% end -%>
  </div>
<% end %>